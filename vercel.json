{
    "version": 2,
    "framework": null,
    "functions": {
        "api/**/*.php": {
            "runtime": "vercel-php@0.7.1"
        }
    },
    "builds": [
      {
        "src": "index.php",
        "use": "@vercel/php"
      },
      {
        "src": "application/**/*",
        "use": "@vercel/static"
      }
    ],
    "outputDirectory": "public",
    "routes": [
        {
            "src": "/assets/(css|favicon|images|js)/(.*)",
            "dest": "assets/$1/$2"
        },
        {
            "src": "/(.*)",
            "dest": "/api/index.php?/$1"
        },
      {
        "src": "/(.*)",
        "dest": "/index.php"
      }
    ]
  }
